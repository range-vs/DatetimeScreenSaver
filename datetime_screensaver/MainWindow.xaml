<Window x:Class="datetime_screensaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:datetime_screensaver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Background="Black"
        Name="Window">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Margin="100,30,100,5">
            <TextBlock Name="Date" Foreground="White" Text="Загрузка..." TextAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Viewbox>
        <Viewbox Grid.Row="1" Margin="70,30,70,5">
            <TextBlock Name="Weather" Foreground="White" Text="Загрузка..." TextAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Viewbox>
        <Viewbox Grid.Row="2" Margin="100,10">
            <TextBlock Name="Time" Foreground="White" Text="Загрузка..." TextAlignment="Center" VerticalAlignment="Center"/>
        </Viewbox>
    </Grid>
</Window>
